{
  "homepage": "https://vidify-demo.netlify.app/",
  "name": "vidify",
  "author": "hazem braiek",
  "private": false,
  "version": "1.1.0",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "vidify",
    "react player",
    "react",
    "video player",
    "media player",
    "UI",
    "customizable",
    "component",
    "TypeScript",
    "seamless playback",
    "dynamic source switching",
    "keyboard shortcuts",
    "accessibility",
    "UI/UX"
  ],
  "sideEffects": true,
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/braiekhazem/Vidify"
  },
  "license": "MIT",
  "bin": {
    "mycli": "./cli.cjs"
  },
  "scripts": {
    "test": "jest --watchAll --coverage",
    "dev": "vite",
    "build": "tsc && vite build",
    "demo": "cd demo && npm run dev",
    "build-demo": "cd demo && npm run build",
    "prepare": "npm run build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 8080",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,css,scss}\"",
    "husky": "husky install",
    "create-component": "bash ./scripts/create-component.sh",
    "docker:build": "./scripts/build-docker.sh",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "classes": "^0.3.0",
    "classnames": "^2.5.1",
    "husky": "^8.0.3",
    "i18next": "^23.11.4",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.1",
    "rc-slider": "^10.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.1",
    "react-tooltip": "^5.26.3",
    "vite-plugin-css-injected-by-js": "^3.4.0",
    "vite-plugin-dts": "^3.7.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-storybook": "^0.8.0",
    "gh-pages": "^6.1.1",
    "prettier": "3.0.0",
    "sass": "^1.71.1",
    "typescript": "^5.4.2",
    "vite": "^4.3.9",
    "vite-plugin-svgr": "^3.2.0"
  }
}
